@model Projekt_ASP.Models.Login

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex align-items-center justify-content-center">
    <form asp-action="Login" method="post" class="border border-info rounded pl-xl-4 pr-xl-4 pt-2 pb-2">
        <div>
            <h2 class="text-center">Login</h2><hr />
        </div>
        <div asp-validation-summary="All" class="form-group d-flex flex-column text-danger"></div>
        <div class="form-group d-flex flex-column">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group d-flex flex-column">
            <label asp-for="Password"></label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group d-flex justify-content-between">
            <button type="submit" class="btn btn-primary mr-xl-5">Login</button>
            <a class="btn btn-outline-success" type="button" asp-controller="Account" asp-action="Register">Register</a>
        </div>
    </form>
</div>
