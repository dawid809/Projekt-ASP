@model Projekt_ASP.Models.User


<div class="d-flex align-items-center justify-content-center">
    <form asp-action="Register" class="border border-info rounded pl-xl-5 pr-xl-5 pt-2 pb-2">
        <div>
            <h2 class="text-center">Login</h2><hr />
        </div>
        <div class="form-group d-flex flex-column">
            <label asp-for="Email">Podaj e-mail</label>
            <input asp-for="Email" />
        </div>
        <div class="form-group d-flex flex-column">
            <label asp-for="Login">Podaj login</label>
            <input asp-for="Login" />
        </div>
        <div class="form-group d-flex flex-column">
            <label asp-for="Password">Podaj hasło</label>
            <input asp-for="Password" />
        </div>
        <div class="form-group d-flex flex-column">
            <label asp-for="Password">Powtórz hasło</label>
            <input asp-for="Password" />
        </div>
        <div class="form-group d-flex justify-content-center align-items-center">
            <button class="btn btn-success">Zarejestruj</button>
        </div>
    </form>
</div>